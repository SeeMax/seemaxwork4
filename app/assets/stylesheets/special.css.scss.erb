@import "variables.css.scss";

.special-page {
  color:$grey;
  background-color:$grey;

  .close {
    background:$grey;
  }

  .special_intro {
    color:white;
    padding:0px 0px 40px 0px;
    font-size:24px;
    line-height:28px;
  }

  p {
    a {
      color:$grey;
      border-bottom: 1px $grey solid;
      padding-bottom: 0px;
    }

    a:hover {
      border-bottom: 2px $grey solid;
    }
  }

  .gallery {

    .pro-tip {
      img {
        max-width:200px;
      }
    }

  }

  .tower-screen {
    padding-top:60px;
  }
}
