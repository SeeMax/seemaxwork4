@import "variables.css.scss";

.email-section {
  position: fixed;
  z-index:99;
  display:flex;
  flex-wrap:wrap;
  align-items:center;
  left:100%;
  top:0;
  height:100%;
  width:80%;
  color:white;
  letter-spacing:6px;



  .email-text-container {
    width: 90%;
    font-size: 42px;
    font-weight: 700;
    margin: 0 auto;

    svg {
      width:100%;
      height:auto;

      text {
        fill:white;
        letter-spacing: 6px;
      }
    }
  }

  .email-headline-container {
    letter-spacing: 2px;
    color:#565656;
    padding-bottom: 8px;
  }

  .email-link{
    font-size:90px;
    text-align:center;
    margin:0px auto;
    max-width:900px;
    padding-bottom:0px;
    border-bottom: 0px white solid;

    .text_symbol{
    font-size:70px;
    }
  }

    .email-message {
      opacity:0;
      padding-top:10px;
      text-align:center;
    }

    .email-link:hover ~ .email-message {
      opacity:100;
      padding-top:100px;
  }

    .email-link:hover{
     padding-bottom:10px;
     border-bottom: 1px white solid;
  }
}



@media all and (max-width: 767px) {
  
  .email-section {
  
    .email-headline-container {
        font-size: 22px;
        padding-bottom: 0;
        margin-bottom: -10px;
    }
  }

}// MAX WIDTH 767