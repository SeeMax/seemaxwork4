@import "variables.css.scss" , "mixins.css.scss";

.work-page {
  color:$red;
  background-color:$red;

  .close {
    background:$red;
  }

  p {
    a {
      color:$red;
      border-bottom: 1px white solid;
      padding-bottom: 0px;
      @include transition;
    }

    a:hover {
      border-bottom: 1px $red solid;
    }
  }

  .tower-screen {
    padding-top:60px;
  }
}

.special-page {
  color:$grey;
  background-color:$grey;

  .close {
    background:$grey;
  }

  p {
    a {
      color:$grey;
      border-bottom: 1px $grey solid;
      padding-bottom: 0px;
      @include transition;
    }

    a:hover {
      border-bottom: 2px $grey solid;
    }
  }

  .tower-screen {
    padding-top:60px;
  }
}