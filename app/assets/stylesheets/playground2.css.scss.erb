@import "variables.css.scss" , "mixins.css.scss";


.playground2-page {
  color:$grey;
  background-color:grey;
  min-height:100%;

  .button {
    width:300px;
    margin:0 auto 100px auto;
    padding:10px 20px;
    border:1px #BCBEC0 solid;
    color:$grey;
    font-weight:400;
    font-size:40px;
    text-align: center;
    cursor:pointer;
  }

  #game_logo {
    width:100%;
    height:auto;
    max-height:600px;

    svg {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
    }
  }

    .rule1_box , .rule2_box {
      display: block;
      height: 225px;
      width:90%;
      position: relative;
      margin:0 auto 150px auto;
  }


    #rule1svg, #rule2svg {
      height:225px;
      width:100%;
    }


    .rule{
      fill:none;
      stroke:#BCBEC0;
      stroke-width:1.5;
      stroke-miterlimit:10;
      stroke-opacity:.8;
    }

    .ruleone_copy, .ruletwo_copy{
      position:absolute;
      top:0px;
      margin:0px auto;
      left:0;
      right:0;
      width:800px;
      height:225px;
      overflow:hidden;
      text-align:center;

      p {
        color:#BCBEC0;
        font-size:60px;
        opacity:0;
        position:absolute;
        top:300px;
        line-height:0px;
        margin:0px auto;
        left:0;
        right:0;
      }
    }
}