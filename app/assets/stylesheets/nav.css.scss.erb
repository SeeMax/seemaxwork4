@import "variables.css.scss" , "mixins.css.scss";

nav {
  display:flex;
  align-content: stretch;
  justify-content:space-between;
  z-index:100;
  font-size:26px;
  letter-spacing:6px;
  font-style:normal;
  line-height:22px;
  padding: 0 2%;
  min-width:522px;
  position:fixed;
  top:15px;
  right: 0;
  left: 0;
  margin-right: auto;
  margin-left: auto;
  @include transition;
}

.nav_item {
  position:relative;
  flex-grow: 1;
  text-align:center;
  padding: 15px 0;
}

.dot {
  z-index: -1;
  position: absolute;
  left:-5px;
  right:0;
  top: -70px;
  margin: 0px auto;
  width:40px;
  height:40px;
  border-radius:50%;
  @include transition;
}

.nav_item:hover .dot {
  top:-35px;
}

.work-darklink {
  background: $red;
}

.logos-darklink {
  background: $yellow;
}

.fun-darklink {
  background: $green;
}

.email-darklink {
  background: $black;
}
