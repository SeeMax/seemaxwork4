@import "variables.css.scss";

nav {
  display:flex;
  align-content: stretch;
  justify-content:space-between;
  z-index:100;
  letter-spacing:4px;
  font-style:normal;
  position:fixed;
  width:100%;
  top:0;
  left: 0;
}

.nav-item {
  position:relative;
  display:flex;
  justify-content:center;
  flex-grow: 1;
  text-align:center;
  padding: 15px 7px 15px 0;
}

.nav-link {
  display: flex;
  font-size:18px;
  color:$black;
  font-weight: 400;
  cursor: pointer;
  padding-left:7px;
}

.nav-active {
  border-bottom: 1px solid black;
}

.contact-close {
  display:block;
  margin-right:-25px;
  padding-left:5px;  
  opacity:0;
}

.white-nav {
  color:white;
}

.black-nav {
  color:$black;
}


@media all and (max-width: 767px) {

  nav {
    width:94%;
    margin:0 auto;
    left:3%;
    right:3%;
  }

  .nav-item {
    padding: 15px 0;
  }

  .nav-link {
    font-size:12px;
    font-weight: 400;
    
    padding-bottom: 3px;
  }

  .nav-active {
    border-bottom: 1px solid black;
  }

  .contact-close {
    margin-right:-12px;
  } 

}// MAX WIDTH 767
