@import "variables.css.scss";

.client_box {
  position:relative;
  transform: translateX(-100%);
  height:100%;
  overflow:hidden;
  padding:0 2%;

  .title {
    width:95%;
    z-index:998;
    cursor:pointer;
    position: relative;
    display: inline-block;
    text-transform: uppercase;
    font-size:70px;
    line-height: 65px;
    font-weight:700;
    letter-spacing:6px;
    margin-bottom:30px;
  }

  .title.active {
    cursor:default;
  }

  .close {
    z-index:999;
    cursor: pointer;
    position: absolute;
    display: flex;
    align-items:center;
    justify-content:center;
    letter-spacing: 0;
    left:93%;
    top:5px;
    width:60px;
    height:60px;
    border: 2px solid $red;
    border-radius: 50%;
    text-align: center;
    font-weight: 800;
    font-size:50px;
    opacity:0;
  }

  .credits {
    display: inline-block;
    text-transform: uppercase;
    font-weight:200;
    font-size: 18px;
    letter-spacing:6px;
    padding:5px 0 10px 5px;

    .text_symbol{
      font-size:18px;
    }
  }

  .client_content {
    margin:0px auto;
    width:100%;
    height:0px;
    overflow: hidden;

    .text, .visit-text {

    }

    .text {
      width:70%;
      margin:30px auto;
      text-align:left;
      -webkit-font-smoothing: antialiased;
      opacity:0;
    }

    p {
      padding:15px 0px 0px 5px;
    }


    .visit-text {
      margin:-20px auto 0 auto;
      text-align: center;
      opacity: .8;
      opacity:0;

      p {
        font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
        color:$grey;
        font-size:14px;
        padding: 0;
        padding-bottom: 50px;
      }
    }
  }

  .screen-frame, .screen-inside, .body-top, .body-bottom, .body-latch, {
    fill:White;
    stroke:Black;
    stroke-width:1;
    opacity:0;
  }

  .screen-inside {
    fill:black;
  }

  .screen-image {
    opacity:0;
  }
}

