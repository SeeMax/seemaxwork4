@import "variables.css.scss";

.gear-page {
  color:$blue;
  background-color:$blue;
  min-height:100%;
  width:100%;
  margin-top:-95px;
  padding-top:95px;

  p {
    a {
      color:$blue;
      border-bottom: 1px white solid;
      padding-bottom: 0px;
    }

    a:hover {
      border-bottom: 1px $blue solid;
    }
  }

  .store-box {
    height:auto;
    padding-bottom:50px;
    margin-bottom:30px;
    position:relative;
    margin:10px auto;
    background:white;
    overflow:hidden;

    .title {
      font-size:55px;
      line-height:75px;
      font-weight:400;
      letter-spacing:6px;
      vertical-align:middle;
      padding:2px 0px 0px 20px;

      .credits {
        font-size:18px;
        letter-spacing:6px;
        font-weight:100;
        line-height:18px;
      }
    }

    .store-item {
      margin:0px auto;
      width:97%;

      .text {
        width:56%;
        margin:60px auto 30px auto;
        text-align:left;
        -webkit-font-smoothing: antialiased;
      }

      p {
        font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
        color:$grey;
        font-size:16px;
        line-height:20px;
        padding:15px 0px 0px 5px;
      }

      img {
        width:32%;
        height:auto;
      }
    }

    .gallery {
      margin:70px auto 50px auto;
      overflow: hidden;
      padding:0px 2px;
      width:97%;

      .gallery_tile, .gallery_tile_2S, .gallery_tile_2L {
        vertical-align:middle;
        float:left;
        margin: 2px 0;
        padding:0px 0;

        .gallery_image {
          text-align:center;
        }

        img {
          width:100%;
          padding:1px;
          background:#eeede3;
        }
      }

      .gallery_tile {
        width:32%;
      }

      .gallery_tile_2S {
        width:29%;
        margin-left:21%;
      }

      .gallery_tile_2L {
        width:59%;
        margin-left:21%;
        margin-bottom:30px;

        img {
          width:100%;
          background:white;
        }
      }

      .middle {
        margin:2px 2%;
      }

      .right {
        margin-left:1%;
      }
    }
  }

  .text {
    margin: 0px auto 20px auto;
    -webkit-font-smoothing: antialiased;
    width:50%;
    height:auto;

    p {
      font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
      line-height:20px;
      color:$grey;
      margin: 40px 0;
    }
  }

  .store_btn {
    background-color:$blue;
    color:white;
    font-size:30px;
    font-weight:300;
    text-align:center;
    padding:10px 15px;
    width: 20%;
    min-width:200px;
    height:auto;
    margin:80px auto 50px auto;
  }
}