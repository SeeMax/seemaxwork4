@import "variables.css.scss";

.email-page {
  color:$black;
  letter-spacing:6px;

  .content{
    padding-top:220px;
  }

  .email-text-container {
    width: 95%;
    font-size: 42px;
    font-weight: 200;
    margin: 0 auto;

    svg {
      width:100%;
      height:auto;

      text {
        letter-spacing: 6px;
      }
    }
  }

  .email-link{
    font-size:90px;
    text-align:center;
    margin:0px auto;
    max-width:900px;
    padding-bottom:0px;
    border-bottom: 0px white solid;

    .text_symbol{
    font-size:70px;
    }
  }

    .email-message {
      opacity:0;
      padding-top:10px;
      text-align:center;
    }

    .email-link:hover ~ .email-message {
      opacity:100;
      padding-top:100px;
  }

    .email-link:hover{
     padding-bottom:10px;
     border-bottom: 1px white solid;
  }
}