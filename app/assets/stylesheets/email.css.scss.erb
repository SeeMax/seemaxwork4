@import "variables.css.scss" , "mixins.css.scss";

.email-page {
  background: $black;
  letter-spacing:6px;

  .content{
    padding-top:220px;
  }

  .email-link{
    font-size:90px;
    text-align:center;
    margin:0px auto;
    max-width:900px;
    padding-bottom:0px;
    border-bottom: 0px white solid;
    @include transition;

    .text_symbol{
    font-size:70px;
    }
  }

    .email-message {
      opacity:0;
      padding-top:10px;
      text-align:center;
      @include transition;
    }

    .email-link:hover ~ .email-message {
      opacity:100;
      padding-top:100px;
  }

    .email-link:hover{
     padding-bottom:10px;
     border-bottom: 1px white solid;
  }
}