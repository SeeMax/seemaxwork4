@import "variables.css.scss";

.on-screen {
  position: relative;
  width:75%;
  margin:20px auto;

  img {
    width:100%;
    }

  svg {
    width:100%;
  }

  .laptop-screen {
    position: relative;
    z-index: 20;
    .screen-frame, .body-top, .body-bottom, .body-latch, {
      fill:White; stroke:Black;stroke-width:1;
    }
  }


  .mobile-screen {
    position: absolute;
    width:20%;
    top:8%;
    z-index: 19;
    left: 69%;
    text-align:center;
    opacity:0;

    .frame, .body, .ear-piece, .home-button {
      fill:White;
      stroke:Black;
      stroke-width:1;
    }
  }
}

