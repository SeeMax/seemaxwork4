@import "variables.css.scss" , "mixins.css.scss";

.red {background:$red;}
.green {background:$green}
.yellow  {background:$yellow;}
.blue {background:$blue;}
.grey {background:$grey;}
.black {background:$black;}

html {
  width:100%;
  height:100%;
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

body {
 color:white;
 font-size:16px;
 font-family:'Mensch', Geneva, Verdana, sans-serif;
 font-weight:100;
 height:100%;
 width:100%;
 position:relative;
 margin:0;
 padding:0;
}

a {
 color:white;
 text-decoration:none;
}

.text_symbol{
  font-family: "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
  -webkit-font-smoothing: antialiased;
  vertical-align:top;
}

h1 {
  font-size:68px;
  line-height:68px;
  font-weight:100;
}

.pages {
  min-height:100%;
  width:100%;
  position:relative;
}

.content{
  padding-top:100px;
  width:95%;
  height:auto;
  margin:0px auto;
  padding-bottom:110px;
  z-index:2;
}

.scrollback{
  opacity:0;
  width:95%;
  height:50px;
  background-color:white;
  position:fixed;
  top:30px;
  z-index:99;
  @include transition;
}

.client_box {
  position:relative;
  margin:10px auto;
  max-height:80px;
  background:white;
  overflow:hidden;
  @include transition;

  .toggle {
    position:relative;
    cursor:pointer;
    width:100%;
    height:80px;
    position:absolute;
    top:0px;
    right:0px;
    opacity:0;
    @include transition;

    .close {
      position:absolute;
      right:20px;
      top:15px;
      width:50px;
      height:50px;
      border-radius:30px;
      font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
      color:white;
      font-size:30px;
      line-height:50px;
      text-align:center;
    }
  }

  .title {
    text-transform: uppercase;
    font-size:70px;
    font-weight:400;
    letter-spacing:6px;
    line-height:80px;
    vertical-align:middle;
    padding:2px 0px 0px 20px;
    @include transition;

    .credits {
      text-transform: uppercase;
      font-weight:100;
      font-size:10px;
      letter-spacing:1px;
      line-height:18px;
      opacity:0;
      @include transition;

      .text_symbol{
        font-size:18px;
      }
    }
  }

  .client_content {
    opacity:0;
    margin:0px auto;
    width:97%;
    @include transition;

    .text {
      width:56%;
      margin:60px auto 30px auto;
      text-align:left;
      -webkit-font-smoothing: antialiased;
    }

    p {
      font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
      color:$grey;
      font-size:16px;
      line-height:20px;
      padding:15px 0px 0px 5px;
    }

    .on_screen {
      position: relative;
      width:75%;
      margin:20px auto;

    img {
      width:100%;
      }
    }

    .laptop-svg {
      width:100%;
      max-width: 100%;
    }

    .small-mobile-screen {
      position: absolute;
      width:20%;
      top:6.5%;
      right:3.5%;
      text-align:center;

      object {
        max-width: 100%;
      }
    }


    .visit-text {
      margin:-20px auto 0 auto;
      text-align: center;
      opacity: .8;

      p {
        font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
        color:$grey;
        font-size:14px;
        padding: 0;
        padding-bottom: 50px;
        line-height:18px;
      }
    }

    .full-mobile-screen {
      padding-top: 60px;
      width:60%;
      margin:0 auto;
      text-align:center;
    }

    .gallery {
      display:flex;
      flex-wrap:wrap;
      margin:70px auto 50px auto;
      overflow: hidden;
      padding:0px 2px;

      .gallery_tile, .gallery_tile_2S, .gallery_tile_2L {

        margin: 2px 0;
        padding:0px 0;
        @include transition;

        .gallery_image {
          text-align:center;
        }

        img {
          width:100%;
          padding:1px;
          background:#eeede3;
        }
      }

      .gallery_tile {
        width:33.33333%;
      }

      .gallery_tile_2 {
        width:50%;
      }

      .gallery_image {
        width:98%;
        margin:0 auto;
      }

      img {
        width:100%;
        background:white;
      }
    }
  }
}

.active {
  max-height:7000px;
  padding-bottom:50px;
  margin-bottom:30px;

  .toggle {
    opacity:1;
  }

  .title {
    font-size:55px;
    line-height:75px;

    .credits {
      opacity:1;
      font-size:18px;
      letter-spacing:6px;
    }
  }

  .client_content {
    opacity:1;
    padding:20px 0;
  }
}

.home-link {
  position:absolute;
  right:40px;
  bottom:20px;
}





@media (min-width: 700px) and (max-width: 1100px) {

  .client_box {

    .client_content {

      .on_screen {
        margin-top:40px;
        width:95%;
      }

      .text {
        margin-top: 30px;
        width:85%;
      }
    }
  }

}