@import "variables.css.scss";

.red {background:$red;}
.green {background:$green}
.yellow  {background:$yellow;}
.blue {background:$blue;}
.grey {background:$grey;}
.black {background:$black;}

html {
  width:100%;
  height:100%;
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

body {
 color:white;
 font-size:16px;
 color:black;
 font-family:'kessel', Geneva, Verdana, sans-serif;
 font-weight:100;
 height:101%;
 width:100%;
 position:relative;
 margin:0;
 padding:0;
}

a {
 color:$black;
 text-decoration:none;
}

.text_symbol{
  font-family: "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
  -webkit-font-smoothing: antialiased;
  vertical-align:top;
}

p {
  font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
}

h2 {
  font-size:68px;
  font-weight:100;
}

.pages {
  min-height:100%;
  width:100%;
  position:relative;
  padding:100px 0;
  overflow: hidden;
}


.scrollback{
  opacity:0;
  width:95%;
  height:50px;
  background-color:white;
  position:fixed;
  top:30px;
  z-index:99;
}

.home-link {
  position:absolute;
  right:40px;
  bottom:20px;
}





@media (min-width: 700px) and (max-width: 1100px) {

  .client_box {

    .client_content {

      .on_screen {
        margin-top:40px;
        width:95%;
      }

      .text {
        margin-top: 30px;
        width:85%;
      }
    }
  }

}