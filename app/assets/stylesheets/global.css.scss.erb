@import "variables.css.scss";

.red {background:$red;}
.green {background:$green}
.yellow  {background:$yellow;}
.blue {background:$blue;}
.grey {background:$grey;}
.black {background:$black;}

html {
width:100%;
height:100%;
 }

body {
 color:white;
 font-size:16px;
 letter-spacing:6px;
 font-family:'Mensch';
 font-weight:100;
 padding:0px;
 margin:0px;
 height:100%;
 width:100%;
 min-width:730px;
}

a {
 color:white;
 text-decoration:none;
}

.pages {
  min-height:100%;
  width:100%;
  margin-top:-95px;
  padding-top:95px;
  position:relative;
}

.content{
  padding-top:150px;
  width:95%;
  min-height:100%;
  margin:0px auto;
  padding-bottom:110px;
}

.client_full {
  cursor:pointer;
  margin:10px auto;
  min-height:80px;
  background:white;
  transition: all 0.8s ease;

  .client_content {
    font-size:70px;
    font-weight:400;
    line-height:80px;
    vertical-align:middle;
    padding:2px 0px 0px 20px;
    transition: all .8s ease;
  }
}

.active {
  min-height:1000px;
  background:white;

  .client_content {
    font-size:40px;
    line-height:60px;
  }
}

h1 {
font-size:127px;
font-weight:100;
margin:0px;
vertical-align:middle;
}

