@import "variables.css.scss";

.red {background:$red;}
.green {background:$green}
.yellow  {background:$yellow;}
.blue {background:$blue;}
.grey {background:$grey;}
.black {background:$black;}

html {
width:100%;
height:100%;
 }

body {
 color:white;
 font-size:16px;
 letter-spacing:6px;
 font-family:'Mensch';
 font-weight:100;
 padding:0px;
 margin:0px;
 height:100%;
 width:100%;
 min-width:730px;
 position:relative;
}

a {
 color:white;
 text-decoration:none;
}

.pages {
  min-height:100%;
  width:100%;
  margin-top:-95px;
  padding-top:95px;
  position:relative;
}

.content{
  padding-top:150px;
  width:95%;
  min-height:100%;
  margin:0px auto;
  padding-bottom:110px;
  z-index:2;
}

.scrollback{
  opacity:0;
  width:95%;
  height:50px;
  background-color:white;
  position:fixed;
  top:30px;
  z-index:99;
  transition: all 0.5s ease-in-out;
}

.client_box {
  position:relative;
  margin:10px auto;
  max-height:80px;
  background:white;
  transition: all 0.8s ease;
  overflow:hidden;

  .toggle {
    cursor:pointer;
    text-align:right;
    font-size:60px;
    font-weight:600;
    width:100%;
    height:100%;
    position: absolute;
    top:0px;
    right:0px;
    opacity:0;
    padding:1% 3% 0% 0%;
    transition: all .8s ease;
  }

  .title {
    font-size:70px;
    font-weight:400;
    line-height:80px;
    vertical-align:middle;
    padding:2px 0px 0px 20px;
    transition: all .8s ease;
    }

  .client_content {
    transition: all .8s ease;
    opacity:0;
    margin:0px auto;
    width:97%;

    p {
      font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
      color:black;
      font-size:25px;
      line-height:0px;
      text-align:center;
      width:100%;
      margin:0 auto;
      transition: all .8s ease;
    }

    .on_screen {
      width:75%;
      margin:20px auto;

    img {
      opacity:0;
      width:100%;
      transition: all .8s ease;
      }
    }

    .gallery {
      margin:100px auto;
      overflow: hidden;

      .gallery_image {
        vertical-align:middle;
        float:left;
        width:32%;
        margin: 2px 0;
        padding:0px 0;
        transition: all .8s ease;

        img {
          width:100%;

        }
      }

      .middle {
        margin:2px 2%;
      }
    }
  }
}

.active {
  max-height:5000px;
  padding-bottom:50px;
  margin-bottom:30px;

  .toggle {
    opacity:1;
    height:7%;
  }

  .title {
    font-size:55px;
    line-height:70px;
  }

  .client_content {
    opacity:1;
    padding:20px 0;

    .on_screen {

    img {
      opacity:1;
      }
    }

    p {
      font-size:14px;
      line-height:18px;
      width:60%;
    }
  }
}

h1, h2, h3, h4, h5, h6 {
  margin:0px;
}

h1 {
  font-size:127px;
  font-weight:100;
  vertical-align:middle;
}

h2 {
  text-align:center;
  font-size:16px;
  font-weight:400;
  line-height:20px;
}

h3 {

}

h4 {

}

.home-link {
  position:absolute;
  right:20px;
  bottom:20px;

  img {
    width:65px;
  }
}