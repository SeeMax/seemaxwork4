@import "variables.css.scss" , "mixins.css.scss" , "reset.css";

.red {background:$red;}
.green {background:$green}
.yellow  {background:$yellow;}
.blue {background:$blue;}
.grey {background:$grey;}
.black {background:$black;}

html {
  width:100%;
  height:100%;
 }

body {
 color:white;
 font-size:16px;
 font-family:'Mensch', Geneva, Verdana, sans-serif;
 font-weight:100;
 height:100%;
 width:100%;
 position:relative;
 margin:0;
 padding:0;
}

a {
 color:white;
 text-decoration:none;
}

.text_symbol{
  font-family: "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif;
  -webkit-font-smoothing: antialiased;
  vertical-align:top;
}

h1 {
  font-size:68px;
  line-height:68px;
  font-weight:100;
}

.pages {
  min-height:100%;
  width:100%;
  margin-top:-95px;
  padding-top:95px;
  position:relative;
}

.content{
  padding-top:150px;
  width:95%;
  height:auto;
  margin:0px auto;
  padding-bottom:110px;
  z-index:2;
}

.scrollback{
  opacity:0;
  width:95%;
  height:50px;
  background-color:white;
  position:fixed;
  top:30px;
  z-index:99;
  @include transition;
}

.client_box {
  position:relative;
  margin:10px auto;
  max-height:80px;
  background:white;
  overflow:hidden;
  @include transition;

  .toggle {
    position:relative;
    cursor:pointer;
    width:100%;
    height:80px;
    position:absolute;
    top:0px;
    right:0px;
    opacity:0;
    @include transition;

    .close {
      position:absolute;
      right:20px;
      top:15px;
      width:50px;
      height:50px;
      border-radius:30px;
      font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
      color:white;
      font-size:30px;
      line-height:50px;
      text-align:center;
    }
  }

  .title {
    font-size:70px;
    font-weight:400;
    letter-spacing:6px;
    line-height:80px;
    vertical-align:middle;
    padding:2px 0px 0px 20px;
    @include transition;

    .credits {
      font-weight:100;
      font-size:10px;
      letter-spacing:1px;
      line-height:18px;
      opacity:0;
      @include transition;

      text_symbol{
        font-size:18px;
      }
    }
  }

  .client_content {
    opacity:0;
    margin:0px auto;
    width:97%;
    @include transition;

    .text {
      width:56%;
      margin:60px auto 30px auto;
      text-align:left;
      -webkit-font-smoothing: antialiased;
    }

    p {
      font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
      color:$grey;
      font-size:16px;
      line-height:20px;
      padding:15px 0px 0px 5px;
    }

    .on_screen {
      width:75%;
      margin:20px auto;

    img {
      width:100%;
      }
    }

    .gallery {
      margin:70px auto 50px auto;
      overflow: hidden;
      padding:0px 2px;

      .gallery_tile, .gallery_tile_2S, .gallery_tile_2L {
        vertical-align:middle;
        float:left;
        margin: 2px 0;
        padding:0px 0;
        @include transition;

        .gallery_image {
          text-align:center;
        }

        img {
          width:100%;
          padding:1px;
          background:#eeede3;
        }
      }

      .gallery_tile {
        width:32%;
      }

      .gallery_tile_2S {
        width:29%;
        margin-left:21%;
      }

      .gallery_tile_2L {
        width:59%;
        margin-left:21%;
        margin-bottom:30px;

        img {
          width:100%;
          background:white;
        }
      }

      .middle {
        margin:2px 2%;
      }

      .right {
        margin-left:1%;
      }
    }
  }
}

.active {
  max-height:5000px;
  padding-bottom:50px;
  margin-bottom:30px;

  .toggle {
    opacity:1;
  }

  .title {
    font-size:55px;
    line-height:75px;

    .credits {
      opacity:1;
      font-size:18px;
      letter-spacing:6px;
    }
  }

  .client_content {
    opacity:1;
    padding:20px 0;
  }
}

.home-link {
  position:absolute;
  right:40px;
  bottom:20px;
}