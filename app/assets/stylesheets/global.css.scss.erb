@import "variables.css.scss";

// OVERRIDE RESET THAT COMPENSATES FOR IE9
svg:not(:root) {
    overflow: visible;
}

.red {background:$red;}
.green {background:$green}
.yellow  {background:$yellow;}
.blue {background:$blue;}
.grey {background:$grey;}
.black {background:$black;}

html {
  width:100%;
  height:100%;
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

.hidden {
  visibility: hidden;
}

body {
 font-size:16px;
 color:black;
 font-family:'kessel', Geneva, Verdana, sans-serif;
 height:101%;
 width:100%;
 position:relative;
 margin:0;
 padding:0;
}

a {
 color:$black;
 text-decoration:none;
}

p {
  margin:0;
  color:$black;
  font-family: "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
  font-size:16px;
  line-height: 1.2;
}

h2 {
  margin:0;
  font-size:68px;
  font-weight:100;
}

.pages {
  min-height:100%;
  width:100%;
  position:relative;
  padding:100px 0;
  overflow: hidden;
}

.home-link {
  z-index:101;
  width: 50px;
  height: 50px;
  position: fixed;
  right: -50px;
  bottom: 20px;
}





@media all and (max-width: 767px) {

  p {
    font-size: 15px;
  }

  h2 {
    font-size: 35px;
    font-weight: 200;
  }
  
  .pages {
    padding:70px 0 100px 0;
  }


.home-link {
  width: 40px;
  height: 40px;
}

}// MAX WIDTH 767
    
