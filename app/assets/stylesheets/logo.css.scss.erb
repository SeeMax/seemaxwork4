@import "variables.css.scss";

.logos-page {
  color:$green;
  
  .content {
    width:92%;
    margin:0 auto;
  }
}

.logo-gallery {
  display:flex;
  justify-content: space-between;
  align-items:flex-start;
  flex-wrap:wrap;
  margin:70px auto 50px auto;
  opacity:1;
}

.logo-tile {
  transform: translateX(-330%);
  display: flex;
  flex-wrap:wrap;
  align-items:center;
  justify-content:middle;
  position: relative;
  cursor: pointer;
  margin:0 auto 100px auto;
  width:32%;
  overflow:hidden;


  img {
    position: relative;
    z-index: 100;
    max-height:80%;
    width:80%;
    margin:0 auto;
    // background:white;
  }
}

.open-logo {
  overflow:visible;  
}

.logo-close {
  display: flex;
  align-items:center;
  justify-content:center;
  text-align: center;
  position: absolute;
  top:-10px;
  right:-10px;
  display:block;
  z-index: 100;
  width:50px;
  height:50px;
  margin: 0 auto;
  padding-bottom: 5px;
  cursor:pointer;
  opacity:0;
  z-index: 101;

  img {
    width:100%;
    height:100%;
    background:none;
  }
}

.logo-title {
  color:$grey;
  letter-spacing: 4px;
  vertical-align: top;
  font-weight:400;
  width:100%;
  text-transform: uppercase;
  text-align: center;
  margin-bottom:20px;
}





@media all and (max-width: 767px) {


  .logo {
    margin-bottom: 50px;
  }

  .logo-tile {
    cursor:default;
    width:100%;
  }

  .logo-title {
    color:#00B165;
    margin:0 auto 10px auto;
    width:80%;
  }

}// MAX WIDTH 767



