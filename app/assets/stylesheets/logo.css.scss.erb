@import "variables.css.scss";

.logos-page {
  color:$yellow;
  background-color:$yellow;

  .logos_full  {
    width:100%;

    margin:10px auto;
    min-height:80px;
    background:white;
    transition: all 0.8s ease;
    overflow:hidden;

    .logos_content{
      cursor:pointer;
      float:left;
      width:32%;
      font-size:70px;
      font-weight:400;
      line-height:80px;
      text-align:center;
      margin: 2px 0;
      padding:20px 0;
      transition: all .8s ease;

      img {
        vertical-align:middle;
        width:80%;
        height:auto;
        transition: opacity .8s ease;
      }

      img:hover {
        opacity:.75;
      }
    }

    .middle {
      margin:2px 2%;
    }
  }
}