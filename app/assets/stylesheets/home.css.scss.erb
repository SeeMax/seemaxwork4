@import "variables.css.scss";

.home-page {
  position: relative;
  width:100%;
  height:100%;
}

.animated-logo {
  position:fixed;
  width:26%;
  height:100%;
  min-height:100%;
  top:0;
  left:0;
  right:0;
  margin:0 auto;
  z-index:-98;
}

.animated-type {
  position:fixed;
  width:24%;
  height:auto;
  bottom:30px;
  left:0;
  right:0;
  margin:0 auto;
  overflow: visible;
}

.logo-stroke{
  fill:none;
  stroke:#e4e4e4;
  stroke-width:5;
  stroke-miterlimit:10;
}

.guide-stroke{
  fill:none;
  stroke:#58595B;
  stroke-width:3;
  stroke-miterlimit:10;
}

.letter-fill {
  opacity:0;
  fill:#e2e2e2;
  stroke:none;
  stroke-width:0;
  stroke-miterlimit:10;
}

.banner {
  width:200px;
  position: fixed;
  bottom:27px;
  right:-200px;

  img {
    position: relative;
    width:30%;

  }
}

.codepen-logo {
   
   path {
    fill:white;
    // stroke:#e4e4e4;
    stroke:none;
    stroke-width:5;
    stroke-miterlimit:10;
   }
}

.codepen-text {
   
  fill:white;
  font-size: 200px;
}

.banner-fill {
  fill:black;
  // stroke:#e4e4e4;
  stroke:none;
  stroke-width:5;
  stroke-miterlimit:10;
}



@media all and (max-width: 767px) {

  .animated-logo {
    position:fixed;
    width:60%;
    height:100%;
    min-height:100%;
    top:0;
    left:0;
    right:0;
    margin:0 auto;
    z-index:-98;
  }

  .animated-type {
    position:fixed;
    width:58%;
    height:auto;
    bottom:30px;
    left:0;
    right:0;
    margin:0 auto;
  }

  .banner {
    display:none;
  }

}// MAX WIDTH 767
    
