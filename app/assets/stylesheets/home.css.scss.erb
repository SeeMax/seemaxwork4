@import "variables.css.scss" , "mixins.css.scss";

.main {
min-width:100%;
min-height:100%;

.logo {
  margin: 0 auto;
  width:100%;
  padding-top:160px;
  text-align:center;
  font-size:40px;
  letter-spacing:6px;

  img {
    padding:20px 0 25px 0;
  }

  p {
    font-size:16px;
    line-height:24px;
    vertical-align:middle;
    font-weight:400;
    text-align:center;
    letter-spacing:1px;
  }

  .text_symbol {
    letter-spacing:0px;
    font-size:24px;
    vertical-align:middle;
  }
}

.bg {
  z-index:-1;
}

  img.bg {
    /* Set rules to fill background */
    min-height: 100%;
    min-width: 1024px;

    /* Set up proportionate scaling */
    width: 100%;
    height: auto;

    /* Set up positioning */
    position: fixed;
    bottom: 0;
    right: 0;
  }
}